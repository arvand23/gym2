




<%- model_class = Workout -%>
<div class="page-header">
  <center><h1>4 Week Workout Plans</h1>
  			<h4>...Because it takes 4 weeks to form a life-changing habit.</h4></center>
</div>




<!--  Carousel - consult the Twitter Bootstrap docs at
      http://twitter.github.com/bootstrap/javascript.html#carousel -->
<div id="this-carousel-id" class="carousel slide"><!-- class of slide for animation -->
  <div class="carousel-inner">
    <div class="item active"><!-- class of active since it's the first item -->
      <img src="http://www.spiaggiarimini.net/wp-content/themes/spiaggiarimini/images/top-giovani.jpg" alt="" />
      <div class="carousel-caption">
        <p><font color="white"><h4>Workout Plans Based on Your Body Type</h4>
        </font color></p>
      </div>
    </div>
    <div class="item">
      <img src="http://www.alexanderhotel.it/uploads/albums/album_23/resize_med/bike%20holiday.jpg" alt="" />
      <div class="carousel-caption">
        <p><h4><font color="white">Workout Plans from Real People</h4></font color></p>
      </div>
    </div>
    <div class="item">
      <img src="http://storeplay.com.au/assets/1/gym.jpg" alt="" />
      <div class="carousel-caption">
        <p><h4><font color="white">See Results in 4 Weeks</h4></font color></p>
      </div>
    </div>
  </div><!-- /.carousel-inner -->
  <!--  Next and Previous controls below
        href values must reference the id for this carousel -->
    <a class="carousel-control left" href="#this-carousel-id" data-slide="prev"><h4>&lsaquo;</h4></a>
    <a class="carousel-control right" href="#this-carousel-id" data-slide="next"><h4>&rsaquo;</h4></a>
</div><!-- /.carousel -->

<center>
<%= form_tag kinds_workouts_path do %>

	<div class="control-group">
		<%= label_tag %>
		<div class="controls">My body type is
		  <%= select_tag :booty, options_for_select([["Ectomorph"], ["Ecto-mesomorph"], ["Mesomorph"], ["Meso-endomorph"], ["Endomorph"]])%>
		  <a href="http://unrestrainedconfessions.files.wordpress.com/2010/01/somatotypes10sitp8.jpg" target="_blank">(Huh?)</a> and I want to  <%= select_tag :goal, options_for_select(["Lose fat", "Gain muscle"])%>.
		</div>
	</div>
	<%= submit_tag 'Find My Workout!', :class => 'btn btn-large btn-primary' %>
<% end %>
</center>


