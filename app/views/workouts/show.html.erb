<%- model_class = Workout -%>
<div class="page-header">
  <center><h1><%= @workout.title %></h1></center>
</div>

<dl class="dl-horizontal">
  <dt><strong>Workout Plan Details:</strong></dt>
  <dd><%= @workout.plan %></dd>
  <dt><strong>Bodyfat (before):</strong></dt>
  <dd><%= @workout.bfbefore %></dd>
  <dt><strong>Bodyfat (after):</strong></dt>
  <dd><%= @workout.bfafter %></dd>
  <dt><strong>Weight (before):</strong></dt>
  <dd><%= @workout.weightbefore %></dd>
  <dt><strong>Weight (after):</strong></dt>
  <dd><%= @workout.weightafter %></dd>
  <dt><strong><%= model_class.human_attribute_name(:bodytype) %>:</strong></dt>
  <dd><%= @workout.bodytype %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              workouts_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_workout_path(@workout), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              workout_path(@workout),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
